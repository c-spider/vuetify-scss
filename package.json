{
    "name": "vuetify-scss",
    "version": "1.3.6",
    "description": "All of the Vuetify styles converted into Sass. No more Stylus!",
    "main": "main.scss",
    "style": "main.scss",
    "sass": "main.scss",
    "scripts": {
        "lint": "stylelint '**/*.scss' --syntax=scss; exit 0",
        "lint:fix": "stylelint '**/*.scss' --syntax=scss --fix; exit 0",
        "prepublishOnly": "stylelint '**/*.scss' --syntax=scss",
        "test": "stylelint '**/*.scss' --syntax=scss",
        "release": "standard-version --message='build(release): %s'",
        "release-minor": "standard-version --release-as=minor --message='build(release): %s'",
        "release-major": "standard-version --release-as=major --message='build(release): %s'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nmsmith22389/vuetify-scss.git"
    },
    "keywords": [
        "vuetify",
        "scss",
        "sass",
        "css",
        "vue"
    ],
    "author": {
        "name": "Neil Smith",
        "email": "nmsmith22389@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nmsmith22389/vuetify-scss/issues"
    },
    "homepage": "https://github.com/nmsmith22389/vuetify-scss#readme",
    "peerDependencies": {
        "vuetify": "~1.5.0"
    },
    "devDependencies": {
        "stylelint": "^9.10.1",
        "stylelint-config-sass-guidelines": "^5.3.0"
    }
}
